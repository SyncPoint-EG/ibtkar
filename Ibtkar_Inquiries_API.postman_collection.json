{
	"info": {
		"_postman_id": "3f2c7d8a-0b7f-4c62-9a6f-8d4b4d9d3c1a",
		"name": "Ibtkar Inquiries API",
		"description": "Postman collection for student/teacher inquiries endpoints.",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Student Inquiries",
			"description": "Student inquiry endpoints (auth:student).",
			"item": [
				{
					"name": "List Inquiries",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/mobile/student/inquiries",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"mobile",
								"student",
								"inquiries"
							]
						}
					},
					"response": []
				},
				{
					"name": "List Subjects For Teacher",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/mobile/student/inquiries/subjects?teacher_id={{teacher_id}}",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"mobile",
								"student",
								"inquiries",
								"subjects"
							],
							"query": [
								{
									"key": "teacher_id",
									"value": "{{teacher_id}}"
								}
							]
						}
					},
					"response": []
				},
				{
					"name": "Create Inquiry",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"teacher_id\": {{teacher_id}},\n  \"subject_id\": {{subject_id}},\n  \"question\": \"What is the schedule for next week?\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/mobile/student/inquiries",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"mobile",
								"student",
								"inquiries"
							]
						}
					},
					"response": []
				}
			],
			"auth": {
				"type": "bearer",
				"bearer": [
					{
						"key": "token",
						"value": "{{student_token}}",
						"type": "string"
					}
				]
			}
		},
		{
			"name": "Teacher Inquiries",
			"description": "Teacher inquiry endpoints (auth:teacher).",
			"item": [
				{
					"name": "List Inquiries",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/mobile/teacher/inquiries?answered={{answered}}&month={{month}}&stage_id={{stage_id}}",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"mobile",
								"teacher",
								"inquiries"
							],
							"query": [
								{
									"key": "answered",
									"value": "{{answered}}"
								},
								{
									"key": "month",
									"value": "{{month}}"
								},
								{
									"key": "stage_id",
									"value": "{{stage_id}}"
								}
							]
						}
					},
					"response": []
				},
				{
					"name": "Answer Inquiry",
					"request": {
						"method": "PATCH",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"answer\": \"The schedule will be posted on Sunday.\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/mobile/teacher/inquiries/{{inquiry_id}}/answer",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"mobile",
								"teacher",
								"inquiries",
								"{{inquiry_id}}",
								"answer"
							]
						}
					},
					"response": []
				}
			],
			"auth": {
				"type": "bearer",
				"bearer": [
					{
						"key": "token",
						"value": "{{teacher_token}}",
						"type": "string"
					}
				]
			}
		}
	],
